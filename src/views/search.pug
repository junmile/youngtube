extends layouts/main
include mixins/videoBlock


block content
    .search__header
        h3 #{searchingBy}로 검색된 결과 입니다.
    .search__videos
        if videos.length ==0
            h5 찾으시는 비디오가 존재하지 않습니다.
        each item in videos
            +videoBlock({
                id:item.id,
                title:item.title,
                views:item.views,
                videoFile:item.fileUrl,
                avatar:item.creator.avatarUrl,
                name: item.creator.name
            })