extends layouts/main

block content
    .form__container
        .form__container__top
            .title
                |비밀번호 변경
            .body
                form(action=`/users${routes.changePassword}`, method="post")
                    input(type="password", name="oldPassword", placeholder="기존 비밀번호")
                    input(type="password", name="newPassword", placeholder="새로운 비밀번호")
                    input(type="password", name="newPassword1", placeholder="비밀번호 확인")
                    input(type="submit", value="Change Password")