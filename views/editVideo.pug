extends layouts/main

block content
    .edit__form__container
        .edit__form__container__top
            .title 
                h3 Edit Video
            .body
                .video__image
                    video#editvideo(src=`/${video.fileUrl}`)
                form(action=routes.editVideo(video.id), method="post")
                    h5.margin15 Title:
                    input#updateinput(type="text", placeholder="Title", name="title", value=video.title)
                    h5.margin15 Content:
                    textarea#updatetextarea(name="description", placeholder="Description")=video.description
                    input.margin15(type="submit", value="Update Video")
                a.form-container__link(href=routes.deleteVideo(video.id)) 
                    button Delete Video 